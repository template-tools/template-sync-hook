{
  "name": "npm-template-sync-github-hook",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "module": "src/npm-template-sync-github-hook.mjs",
  "description": "github hook for npm-template-sync",
  "keywords": [
    "npm",
    "template",
    "webhook",
    "github"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "npm-template-sync-github-hook": "bin/npm-template-sync-github-hook"
  },
  "scripts": {
    "cover": "c8 --temp-directory build/coverage ava && c8 report -r lcov --temp-directory build/coverage",
    "docs": "documentation readme src/npm-template-sync-github-hook.mjs --section=API",
    "lint": "documentation lint src/npm-template-sync-github-hook.mjs",
    "package": "npm-pkgbuild --npm-dist --npm-modules -t /data/binaries/arch-linux/packages/ pkgbuild pacman makepkg",
    "posttest": "npm run prepare && markdown-doctest",
    "prepare": "rollup -c",
    "start": "node bin/npm-template-sync-github-hook",
    "test": "ava"
  },
  "dependencies": {
    "github-repository-provider": "^7.0.2",
    "github-webhook-handler": "^0.7.0",
    "micro": "^9.3.3",
    "npm-template-sync": "^8.0.8",
    "systemd": "^0.3.1"
  },
  "devDependencies": {
    "ava": "^1.2.1",
    "c8": "^3.4.0",
    "documentation": "^9.1.1",
    "esm": "^3.2.0",
    "got": "^9.6.0",
    "markdown-doctest": "^0.9.1",
    "npm-pkgbuild": "^5.0.0",
    "rollup": "^1.1.2",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-executable": "^1.4.4",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "semantic-release": "^15.13.3",
    "x-hub-signature": "^1.2.0"
  },
  "engines": {
    "node": ">=10.15.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/npm-template-sync-github-hook.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/npm-template-sync-github-hook/issues"
  },
  "homepage": "https://github.com/arlac77/npm-template-sync-github-hook#readme",
  "release": {},
  "ava": {
    "files": [
      "tests/*-test.js",
      "tests/*-test.mjs"
    ],
    "require": [
      "esm"
    ],
    "babel": false,
    "compileEnhancements": false,
    "extensions": [
      "js",
      "mjs"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  },
  "pacman": {
    "groups": "webhook",
    "install": "pacman/install.sh",
    "installdir": "/services/${name}",
    "depends": {
      "systemd": ">=240.0"
    }
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  }
}
