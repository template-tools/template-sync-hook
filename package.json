{
  "name": "npm-template-sync-github-hook",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "description": "github hook for npm-template-sync",
  "keywords": [
    "npm",
    "template",
    "webhook",
    "github"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "npm-template-sync-github-hook": "bin/npm-template-sync-github-hook"
  },
  "module": "src/npm-template-sync-github-hook-cli.mjs",
  "scripts": {
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme src/npm-template-sync-github-hook-cli.mjs --section=API",
    "lint": "documentation lint src/npm-template-sync-github-hook-cli.mjs",
    "package": "npm-pkgbuild --npm-dist --npm-modules pkgbuild pacman makepkg",
    "posttest": "npm run prepare && markdown-doctest",
    "prepare": "rollup -c",
    "pretest": "npm run prepare",
    "start": "node bin/npm-template-sync-github-hook",
    "test": "ava"
  },
  "dependencies": {
    "commander": "^4.0.1",
    "config-expander": "^11.0.6",
    "github-repository-provider": "^7.4.29",
    "koa": "^2.11.0",
    "koa-better-router": "^2.1.1",
    "koa-github-hook-handler": "^1.4.1",
    "npm-template-sync": "^8.5.49",
    "remove-sensible-values": "^1.0.3"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^4.0.0",
    "@semantic-release/exec": "^3.3.8",
    "ava": "^2.4.0",
    "builtin-modules": "^3.1.0",
    "c8": "^6.0.1",
    "documentation": "^12.1.3",
    "esm": "^3.2.25",
    "got": "^9.6.0",
    "markdown-doctest": "^1.0.0",
    "npm-pkgbuild": "^6.10.8",
    "rollup": "^1.27.0",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-executable": "^1.5.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "semantic-release": "^15.13.30",
    "x-hub-signature": "^1.2.0"
  },
  "optionalDependencies": {
    "sd-daemon": "^1.0.2"
  },
  "engines": {
    "node": ">=12.12.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/npm-template-sync-github-hook.git"
  },
  "files": [
    "bin"
  ],
  "bugs": {
    "url": "https://github.com/arlac77/npm-template-sync-github-hook/issues"
  },
  "homepage": "https://github.com/arlac77/npm-template-sync-github-hook#readme",
  "config": {
    "base": "/services/npm-template-sync",
    "socket": "/run/${name}/socket"
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  },
  "pacman": {
    "arch": [
      "aarch64",
      "armv7h",
      "x86_64"
    ],
    "groups": "webhook",
    "hooks": "pacman/hooks.sh",
    "installdir": "/services/${name}",
    "depends": {
      "systemd": ">=243.51",
      "nginx-mainline": ">=1.17.3"
    },
    "backup": "etc/${name}/config.json",
    "content": {
      "/etc/${name}/config.json": "pacman/config.json",
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "ava": {
    "files": [
      "tests/*-test.mjs"
    ],
    "require": [
      "esm"
    ],
    "babel": false,
    "compileEnhancements": false,
    "extensions": [
      "mjs"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  }
}
