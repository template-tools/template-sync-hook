{
  "name": "template-sync-hook",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "description": "hook for npm-template-sync",
  "keywords": [
    "github",
    "kronos-integration",
    "npm",
    "systemd",
    "template",
    "webhook"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "template-sync-hook": "./src/template-sync-hook-cli.mjs"
  },
  "scripts": {
    "start": "node src/template-sync-hook-cli.mjs",
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*-ava.mjs tests/*-ava-node.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m tests/*-ava.mjs tests/*-ava-node.mjs && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme ./src/template-sync-hook-cli.mjs --section=API",
    "lint": "npm run lint:docs",
    "lint:docs": "documentation lint ./src/template-sync-hook-cli.mjs"
  },
  "dependencies": {
    "@kronos-integration/interceptor-webhook": "^1.1.57",
    "@kronos-integration/service": "^10.4.41",
    "@kronos-integration/service-http": "^10.6.140",
    "@kronos-integration/service-repositories": "^2.0.148",
    "@template-tools/template-sync": "^11.1.6",
    "github-repository-provider": "^7.33.36"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "ava": "^5.1.0",
    "c8": "^7.12.0",
    "documentation": "^14.0.0",
    "got": "^12.5.3",
    "npm-pkgbuild": "^10.18.1",
    "semantic-release": "^20.0.2"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.5.6",
    "mf-hosting": "^1.8.2"
  },
  "engines": {
    "node": ">=18.13.0"
  },
  "os": [
    "linux"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/template-tools/template-sync-hook"
  },
  "bugs": {
    "url": "https://github.com/template-tools/template-sync-hook/issues"
  },
  "homepage": "https://github.com/template-tools/template-sync-hook#readme",
  "pkgbuild": {
    "content": {
      "${systemd.unit.dir}${name}.service": "pkg/${name}.service",
      "${systemd.unit.dir}${name}.socket": "pkg/${name}.socket",
      "${config.dir}config.json": "pkg/config.json",
      "${nginx.sites.dir}${name}.conf": "pkg/nginx.conf",
      "${tmpfiles.config.dir}${name}.conf": "pkg/tmpfiles.conf",
      "${sysusers.config.dir}${name}.conf": "pkg/sysusers.conf",
      "${install.dir}": [
        {
          "type": "npm-pack"
        },
        {
          "type": "node-modules"
        }
      ]
    },
    "hooks": "pkg/hooks.sh",
    "backup": "${config.dir}config.json"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --continue --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "Debian Package"
            },
            {
              "path": "dist/*.pkg.*",
              "label": "Arch Linux Package"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-kronos-app"
    ]
  }
}
