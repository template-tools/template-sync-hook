{
  "name": "template-sync-hook",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "description": "hook for npm-template-sync",
  "keywords": [
    "github",
    "kronos-integration",
    "npm",
    "systemd",
    "template",
    "webhook"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "template-sync-hook": "./src/template-sync-hook-cli.mjs"
  },
  "scripts": {
    "start": "node src/template-sync-hook-cli.mjs",
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m tests/*.mjs && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme ./src/template-sync-hook-cli.mjs --section=API",
    "lint": "npm run lint:docs",
    "lint:docs": "documentation lint ./src/template-sync-hook-cli.mjs"
  },
  "dependencies": {
    "@kronos-integration/interceptor-webhook": "^1.1.44",
    "@kronos-integration/service": "^10.4.20",
    "@kronos-integration/service-http": "^10.6.106",
    "@kronos-integration/service-repositories": "^2.0.95",
    "@template-tools/template-sync": "^11.0.15",
    "github-repository-provider": "^7.26.4"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "ava": "^4.2.0",
    "c8": "^7.11.0",
    "documentation": "^13.2.0",
    "got": "^12.0.3",
    "npm-pkgbuild": "^8.3.15",
    "semantic-release": "^19.0.2"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.5.4",
    "mf-hosting": "github:arlac77/mf-hosting"
  },
  "engines": {
    "node": ">=16.14.2"
  },
  "os": [
    "linux"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/template-tools/template-sync-hook.git"
  },
  "bugs": {
    "url": "https://github.com/template-tools/template-sync-hook/issues"
  },
  "homepage": "https://github.com/template-tools/template-sync-hook#readme",
  "config": {
    "base": "/services/template-sync-hook",
    "socket": "/run/${name}/http/socket"
  },
  "pkg": {
    "content": {
      "${systemd.unit.dir}": {
        "base": "systemd"
      },
      "${config.dir}config.json": "pkg/config.json",
      "${nginx.sites.dir}${name}.conf": "pkg/nginx.conf",
      "${install.dir}": [
        {
          "type": "npm-pack"
        },
        {
          "type": "node-modules"
        }
      ],
      "${tmpfiles.config.dir}${name}.conf": "pkg/tmpfiles.conf"
    },
    "hooks": "pkg/hooks.sh",
    "backup": "${config.dir}config.json",
    "groups": "webhook",
    "depends": {
      "nginx-mainline": ">=1.21.4",
      "systemd": ">=250.4"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild"
        }
      ],
      "@semantic-release/github",
      "@semantic-release/npm"
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-kronos-app"
    ]
  }
}
